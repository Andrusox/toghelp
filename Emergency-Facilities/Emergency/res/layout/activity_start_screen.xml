<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartScreen"
    android:background="@color/bianco" >

    <Button
        android:id="@+id/situation"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/askhelp"
        android:layout_alignRight="@+id/askhelp"
        android:layout_below="@+id/givehelp"
        android:layout_marginTop="50dp"
        android:background="@drawable/selettorebutton"
        android:text="Situation"
        android:textColor="@color/bianco"
        android:textSize="30sp" />

    <Button
        android:id="@+id/givehelp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/situation"
        android:layout_alignRight="@+id/askhelp"
        android:layout_below="@+id/askhelp"
        android:layout_marginTop="50dp"
        android:background="@drawable/selettorebutton"
        android:text="Give help"
        android:textColor="@color/bianco"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/askhelp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/titoloapp"
        android:layout_alignRight="@+id/titoloapp"
        android:layout_below="@+id/titoloapp"
        android:layout_marginTop="65dp"
        android:background="@drawable/selettorebutton"
        android:text="Ask Help"
        android:textColor="@color/bianco"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/titoloapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/header"    
         />
    
</RelativeLayout>
