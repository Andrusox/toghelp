<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bianco"
    tools:context=".StartScreen" >

    <Button
        android:id="@+id/givehelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/askhelp"
        android:layout_below="@+id/askhelp"
        android:layout_marginTop="40dp"
        android:text="Give help" />

    <Button
        android:id="@+id/situation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/askhelp"
        android:layout_below="@+id/givehelp"
        android:layout_marginTop="40dp"
        android:text="Situation" />

    <Button
        android:id="@+id/askhelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:text="Ask Help" />

    <TextView
        android:id="@+id/titoloapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="@string/app_name"
        android:textColor="@color/rossoscuro"
        android:textSize="40sp" />
    
</RelativeLayout>
