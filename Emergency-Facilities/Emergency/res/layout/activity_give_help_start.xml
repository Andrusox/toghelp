    <TextView
        android:id="@+id/adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phone"
        android:layout_below="@id/phone"
        android:paddingLeft="5dp"
        android:layout_marginTop="25dp"
        android:text="Address"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/adress"
        android:layout_below="@+id/adress"
        android:paddingLeft="5dp"
        android:text="City"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/postalcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/city"
        android:layout_below="@id/city"
        android:text="Postal code"
        android:paddingLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/paese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/postalcode"
        android:layout_below="@+id/postalcode"
        android:text="Country"
        android:paddingLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/paese"
        android:layout_marginTop="20dp"
        android:paddingLeft="5dp"
        android:text="Area of availability"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/getlocation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/phone"
        android:layout_below="@+id/phone"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/ic_menu_compass" />

    <EditText
        android:id="@+id/area"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/linearLayout2"
        android:ems="10"
        android:hint="Km"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:text="See your given helps"
        android:textColor="@color/verdescuro"
        android:drawableRight="@drawable/arrow" />

    <TextView
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/see"
        android:padding="10dp"
        android:textSize="25sp"
        android:layout_marginTop="0dp"
        android:text="Select and give donation"
        android:textColor="@color/verdescuro"
        android:drawableRight="@drawable/arrow"/>
    
</RelativeLayout>
</ScrollView>